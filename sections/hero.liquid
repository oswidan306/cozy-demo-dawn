{{ 'section-hero.css' | asset_url | stylesheet_tag }}

<div class="hero-section relative overflow-hidden bg-[#f5f5f5] rounded-lg">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12 md:py-16 lg:py-20">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 items-center">
      <div class="flex flex-col justify-center">
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6 leading-tight">
          {{ section.settings.heading }}
        </h1>
        <div class="text-base md:text-lg mb-8 max-w-lg">
          {{ section.settings.paragraph }}
        </div>
        {% if section.settings.button_label != blank %}
          <div>
            <a href="{{ section.settings.button_url }}" class="button">
              {{ section.settings.button_label }}
            </a>
          </div>
        {% endif %}
      </div>
      <div class="relative">
        {% if section.settings.image != blank %}
          <img
            src="{{ section.settings.image | image_url: width: 800 }}"
            alt="{{ section.settings.image.alt | escape }}"
            loading="lazy"
            width="{{ section.settings.image.width }}"
            height="{{ section.settings.image.height }}"
            class="w-full h-auto rounded-lg"
          >
        {% else %}
          {{ 'image' | placeholder_svg_tag: 'w-full h-auto rounded-lg bg-gray-200' }}
        {% endif %}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Hero",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "default": "Life Improvements Require Home Improvements",
      "label": "Heading"
    },
    {
      "type": "richtext",
      "id": "paragraph",
      "default": "<p>Our wide selection of furniture pieces are designed to bring both style and comfort to any space.</p>",
      "label": "Paragraph"
    },
    {
      "type": "text",
      "id": "button_label",
      "default": "Shop now",
      "label": "Button label"
    },
    {
      "type": "url",
      "id": "button_url",
      "default": "/collections/all",
      "label": "Button link"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    }
  ],
  "presets": [
    {
      "name": "Hero",
      "category": "Custom"
    }
  ]
}
{% endschema %}
